{
  "compilerOptions": {
    "rootDir": "./src/",
    "moduleResolution": "Node",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "outDir": "./dist/",
    "strict": true,
    "skipLibCheck": true,
    "target": "es6",
    "module": "commonjs"
  }
}
